#ifndef __H3ULCB_OVERWRITE__
#include "r8a7795-h3ulcb.dts"
#endif // __H3ULCB_OVERWRITE__
#include "android/r8a7795.dtsi"

/ {
	/delete-node/keyboard;

	gpio_keys {
		compatible = "gpio-keys";

		power {
			label = "SW-3";
			gpios = <&gpio6 11 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_POWER>;
			gpio-key,wakeup;
		};

		volume-down {
			label = "SW-4";
			gpios = <&gpio6 12 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_VOLUMEDOWN>;
		};

		volume-up {
			label = "SW-5";
			gpios = <&gpio6 13 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_VOLUMEUP>;
		};

		soft-sw0 {
			label = "SW-2-1";
			gpios = <&gpio5 17 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_F1>;
		};

		soft-sw1 {
			label = "SW-2-2";
			gpios = <&gpio5 20 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_F2>;
		};

		soft-sw2 {
			label = "SW-2-3";
			gpios = <&gpio5 22 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_F3>;
		};

		soft-sw3 {
			label = "SW-2-4";
			gpios = <&gpio5 23 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_F4>;
		};
	};

	ion {
		compatible = "renesas,ion-rcar";

		ion_heap {
			compatible = "renesas,ion-rcar-heap";
			memory-region = <&ion_reserved>;
			heap-name = "rcar-ion";
		};
	};
};

&du {
	clocks = <&cpg CPG_MOD 724>,
		<&cpg CPG_MOD 723>,
		<&cpg CPG_MOD 722>,
		<&cpg CPG_MOD 721>,
		<&cpg CPG_MOD 727>,
		<&cpg CPG_MOD 711>,
		<&cpg CPG_MOD 710>,
		<&cpg CPG_MOD 709>,
		<&cpg CPG_MOD 708>,
		<&versaclock5 1>,
		<&versaclock5_out3>,
		<&versaclock5_out4>,
		<&versaclock5 2>;
	clock-names = "du.0", "du.1", "du.2", "du.3", "lvds.0",
		"cmm.0", "cmm.1", "cmm.2", "cmm.3",
		"dclkin.0", "dclkin.1", "dclkin.2", "dclkin.3";

	ports {
		port@1 {
			endpoint {
				remote-endpoint = <&rcar_dw_hdmi0_in>;
			};
		};
	};
};

&pfc {
	can0_pins: can0 {
		groups = "can0_data_a";
		function = "can0";
	};

	can1_pins: can1 {
		groups = "can1_data";
		function = "can1";
	};

	hscif0_pins: hscif0 {
		groups = "hscif0_data", "hscif0_ctrl";
		function = "hscif0";
	};

	scif1_pins: scif1 {
		groups = "scif1_data_b", "scif1_ctrl";
		function = "scif1";
	};

	usb0_pins: usb0 {
		groups = "usb0";
		function = "usb0";
	};
};

&hsusb {
	dr_mode = "otg";
	status = "okay";
};

&usb2_phy0 {
	pinctrl-0 = <&usb0_pins>;
	pinctrl-names = "default";

	status = "okay";
};

&hdmi0 {
	ports {
		port@0 {
			reg = <0>;
			rcar_dw_hdmi0_in: endpoint {
				remote-endpoint = <&du_out_hdmi0>;
			};
		};
	};
};
